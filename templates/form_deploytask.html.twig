                    {% endset %}
                    {% set condition = {
                        'plugin_releases_releases_id': item.fields['id']
                    } %}

                    {{ fields.dropdownField(
                        'PluginReleasesRisk',
                        'plugin_releases_risks_id',
                        subitem.fields['plugin_releases_risks_id'],
